    nav.navbar.navbar-fixed-top.navbar-inverse
      .container-fluid
        .navbar-header
          button(type="button",class="navbar-toggle collapsed",data-toggle="collapse",aria-expanded="false",aria-controls="navbar",data-target="#collapsibleMenu")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Thattachu

        // collapsible other links
        #collapsibleMenu.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href="/courses") Courses
            li
              a(href="/workbench") Workbench
            li
              a(href="/teacher") Create Course
          ul.nav.navbar-nav.navbar-right
            li
              a(href="https://github.com/tecoholic/thattachu") Source

    div(ng-view)
      block content

